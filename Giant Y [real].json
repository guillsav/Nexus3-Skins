{
	// Front panel properties
	"panel": {

		// Here we define all colors for the panel
		"colors": {

			// General
			"background": "#d5d5d3",
			"label": "#3b3c3e",
			"accent": "deeppink",
			"shadows": "#000c",

			// Groups
			"groups": {

				"background": "#282826",
				"label": "#eeeeec",

				"scrollbars": {
	
					"background": "#000",
					"thumb": "#888",
					"thumb-hover": "#ccc"
				}
			},

			// Dials
			"dials": {

				"ring": "#969799",

				"outline": "#0001",
				"top": "#d7d7d5",
				"bottom": "#c2bdb9",

				"bevel": {

					"highlight": "#ebebe9",
					"shadow": "#0004"
				},

				"line": "#3b3c3e"
			},

			"effects": {

				"modulated": "deeppink"
			},

			"scrollbars": {
	
				"background": "#0000",
				"thumb": "#444",
				"thumb-hover": "#fff"
			}
		},

		// Here we define panel-dials properties
		"dial-style": {

			"outline": 2,
			"top-bevel": 1.5,
			"ring-width": 2,
			"ring-space": 5,
			"shadow-size": 0.6,
			"shadow-distance-y": 0.3,
			"pointer-space": 3,
			"pointer-width": 2.5,
			"light-angle-min": -5,
			"light-angle-max": 5
		},

		// Here we define note-event properties
		"events": {
			"note-depth": 0.2,
			"note-radius": 2,
			"note-outline": 0.5
		}
	},

	// Header properties
	"header": {

		// Here we define all colors for the header
		"colors": {

			// General
			"background": "#222220",
			"label": "#aaa",
			"group": "#11110f",
			"shadows": "#0008",
			"noise": "#0002",

			// Dials
			"dials": {

				"ring": "#5a5a5b",

				"outline": "#0004",
				"top": "#5d5d5d",
				"bottom": "#3e3e3e",

				"bevel": {

					"highlight": "#0004",
					"shadow": "#0004"
				},

				"line": "#969799"
			}
		},

		// Here we define header-dials properties
		"dial-style": {

			"outline": 1.5
		}
	},

	// Preview-dial
	"preview": {

		"colors": {

			"dials": {

				"outline": "#0004",

				"top": "#5d5d5d",
				"bottom": "#3e3e3e",

				"bevel": {

					"highlight": "#0004",
					"shadow": "#0004"
				},

				"line": "#969799"
			}
		},

		// Here we define preview-dial properties
		"dial-style": {

			"outline": 1,
			"ring-space": 2,	// only for preview-dial: limited to 0-2
			"ring-width": 0,	// only for preview-dial: limited to 0-2
			"shadow-size": 0.33,
			"shadow-distance-y": 0.3
		}
	},

	// Here we define the virtual keyboard
	"keyboard": {

		"colors": {

			"wheels": "#555551",
			"black-notes": "#181814",
			"white-notes": "#f8f8f4"
		},

		"realistic": true
	}
}
